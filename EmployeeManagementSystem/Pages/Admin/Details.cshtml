@page
@model EmployeeManagementSystem.Pages.Admin.DetailsModel
@{
    ViewData["Title"] = "Employee Details";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Employee Details</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.Profile.ProfileImage))
                    {
                        <img src="data:image/jpeg;base64,@Model.Profile.ProfileImage"
                             class="img-fluid rounded-circle mb-3"
                             style="max-width: 200px;"
                             alt="Profile Picture" />
                    }
                    else
                    {
                        <div class="text-muted">No profile picture</div>
                    }
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.User.Email</dd>

                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">@Model.Profile.FirstName</dd>

                        <dt class="col-sm-4">Middle Name</dt>
                        <dd class="col-sm-8">@(Model.Profile.MiddleName ?? "-")</dd>

                        <dt class="col-sm-4">Last Name</dt>
                        <dd class="col-sm-8">@Model.Profile.LastName</dd>

                        <dt class="col-sm-4">Employee ID</dt>
                        <dd class="col-sm-8">@Model.Profile.EmployeeId</dd>

                        <dt class="col-sm-4">Job Title</dt>
                        <dd class="col-sm-8">@Model.Profile.JobTitle</dd>

                        <dt class="col-sm-4">Date of Birth</dt>
                        <dd class="col-sm-8">@Model.Profile.DateOfBirth?.ToShortDateString()</dd>

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.User.CreatedAt.ToLocalTime().ToString("g")</dd>

                        <dt class="col-sm-4">Last Updated</dt>
                        <dd class="col-sm-8">
                            @(Model.Profile.UpdatedAt?.ToLocalTime().ToString("g") ?? "Never")
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="btn-group">
                <a asp-page="./Edit" asp-route-id="@Model.User.Id" class="btn btn-primary">Edit</a>
                <form method="post" asp-page-handler="Delete" asp-route-id="@Model.User.Id"
                      style="display: inline;"
                      onsubmit="return confirm('Are you sure you want to delete this employee?');">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
